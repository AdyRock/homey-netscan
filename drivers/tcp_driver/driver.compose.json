{
  "name": {
    "en": "TCP port",
    "nl": "TCP poort",
    "de": "TCP-Port"
  },
  "class": "sensor",
  "capabilities": [
    "ip_present"
  ],
  "images": {
    "large": "assets/drivers/tcp_driver/large.png",
    "small": "assets/drivers/tcp_driver/small.png"
  },
  "pair": [
    {
      "id": "configure_ip"
    },
    {
      "id": "add_sockets",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Port scan settings",
        "nl": "Port scan instellingen",
        "de": "Port-Scan-Einstellungen"
      },
      "children": [
        {
          "id": "host",
          "type": "text",
          "value": "0.0.0.0",
          "label": {
            "en": "IP address",
            "nl": "IP adres",
            "de": "IP-Adresse"
          }
        },
        {
          "id": "tcp_port",
          "type": "number",
          "value": 9090,
          "label": {
            "en": "TCP port",
            "nl": "TCP poort",
            "de": "TCP-Port"
          },
          "max": 65535
        },
        {
            "id": "host_check_interval",
            "type": "number",
            "value": 15,
            "label": {
                "en": "Check Interval",
                "nl": "Controleer interval",
                "de": "Prüfintervall"
            }
        },
        {
            "id": "host_timeout",
            "type": "number",
            "value": 10,
            "label": {
                "en": "Check Timeout",
                "nl": "Controleer time-out",
                "de": "Zeitüberschreitung"
            }
        }
      ]
    }
  ]
}
