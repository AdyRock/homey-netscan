{
    "name": {
        "en": "TCP port",
        "nl": "TCP poort"
    },
    "platforms": [
        "local"
    ],
    "connectivity": [
        "lan"
    ],
    "class": "sensor",
    "capabilities": [
        "alarm_offline",
		"onoff"
    ],
    "capabilitiesOptions": {
        "alarm_offline": {
            "titleTrue": {
                "en": "Offline"
            },
            "titleFalse": {
                "en": "Online"
            }
        },
		"onoff": {
			"uiComponent": null
		}
    },
    "images": {
        "large": "assets/drivers/tcp_driver/large.png",
        "small": "assets/drivers/tcp_driver/small.png"
    },
    "pair": [
        {
            "id": "configure_ip"
        },
        {
            "id": "add_sockets",
            "template": "add_devices"
        }
    ],
    "settings": [
        {
            "type": "group",
            "label": {
                "en": "Port scan settings",
                "nl": "Port scan instellingen"
            },
            "children": [
                {
                    "id": "host",
                    "hint": "IP address of the device to check",
                    "type": "text",
                    "value": "0.0.0.0",
                    "label": {
                        "en": "IP address",
                        "nl": "IP adres"
                    }
                },
                {
                    "id": "tcp_port",
                    "hint": "Port number on check on the device",
                    "type": "number",
                    "value": 9090,
                    "label": {
                        "en": "TCP port",
                        "nl": "TCP poort"
                    },
                    "max": 65535
                },
                {
                    "id": "host_check_interval",
                    "hint": "Time between checks for the device",
                    "type": "number",
                    "value": 15,
                    "units": "seconds",
                    "label": {
                        "en": "Check Interval"
                    }
                },
                {
                    "id": "host_timeout",
                    "hint": "Time to wait before reporting the device is offline",
                    "type": "number",
                    "value": 10,
                    "units": "seconds",
                    "label": {
                        "en": "Check Timeout"
                    }
                },
                {
                    "id": "host_unreachable_checks",
                    "hint": "Number of unreachable failures before reporting the device is offline",
                    "type": "number",
                    "value": 1,
                    "label": {
                        "en": "Unreachable checks"
                    }
                }
            ]
        }
    ]
}